.chat-view
  display: table
  width: 200px
  height: height = 300px
  margin: auto
  margin-top: 4px - height
  float: left
  font-size: 10px
  
  & + .chat-view
    margin-left: 10px
  
  titleheight = 24px
  sendheight = 50px
  
  .inner
    border: 1px solid #ccc

    .title
      font-weight: bold
      font-size: 1.2em
      height: titleheight - 4px
      padding: 2px 10px
      background-color: #ccc
    
    .conversation
      height: height - titleheight - sendheight
      overflow: hidden
      overflow-y: scroll
      
      .message
        padding: 2px 6px
        
        & + .message
          border-top: 1px solid #ccc
          margin-top: 2px
        
        .body
          font-size: 1.1em
          
        .time
          text-align: right
          font-size: 0.8em
          color: #999
      
      
    .send
      height: sendheight
      background-color: #999
      
      input.body
        height: sendheight - 2px